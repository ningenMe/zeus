<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
    PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
    "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <classPathEntry location="/Program Files/IBM/SQLLIB/java/db2java.zip"/>

    <context id="context" targetRuntime="MyBatis3Kotlin">
        <jdbcConnection driverClass="org.mariadb.jdbc:mariadb-java-client"
                        connectionURL="jdbc:mysql:127.0.0.1:3306/ningenme"
                        userId="root"
                        password="password">
        </jdbcConnection>

        <javaModelGenerator targetPackage="test.model" targetProject="\MBGTestProject\src">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="test.xml" targetProject="\MBGTestProject\src">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <table schema="ningenme"
               tableName="%"
        >
            <domainObjectRenamingRule searchString="$" replaceString="BaseDto"/>
        </table>

    </context>
</generatorConfiguration>
